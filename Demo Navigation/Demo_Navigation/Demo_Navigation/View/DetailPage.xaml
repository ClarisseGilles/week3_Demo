<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo_Navigation.View.DetailPage">
    <ContentPage.Content>
        <!-- StackLayout: displays all children underneath each other by default -->
        <StackLayout Margin="16">
            <!-- Label: show single string -->
            <!--    Margin: space around label, eg.: "8,4" = 8 left/right, 4 up/down -->
            <!--    Text: default text to be displayed (if not present, it will be empty) -->
            <!--    x:Name: name of the control te access it from code (MainPage.xaml.cs) -->
            <Label x:Name="lblBrewery" Margin="8,4" />
            <Label x:Name="lblColor" Margin="8,4" />
            <Label x:Name="lblAlcohol" Margin="8,4" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>